<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{product.name}} - Aquatic Avenue</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-white">
    <!-- Navigation Header -->
    <nav class="bg-white border-b border-gray-200">
        <div class="container mx-auto px-4">
            <!-- Top bar with logo and icons -->
            <div class="flex items-center justify-between py-4">
                <div class="flex-1"></div>
                <div class="text-center">
                    <a href="/">
                        <h1 class="text-2xl font-light tracking-widest">AQUATIC AVENUE</h1>
                        <p class="text-xs text-gray-500 tracking-wide">THE AQUARIUM SPECIALIST</p>
                    </a>
                </div>
                <div class="flex-1 flex justify-end items-center space-x-4">
                    <button class="p-2 hover:bg-gray-100 rounded-full">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </button>
                    <button class="p-2 hover:bg-gray-100 rounded-full">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </button>
                    <a href="/cart" class="relative p-2 hover:bg-gray-100 rounded-full">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                        </svg>
                        <span id="cartCount" class="absolute -top-1 -right-1 bg-gray-900 text-white text-[10px] rounded-full px-1.5 py-0.5">0</span>
                    </a>
                </div>
            </div>
            
            <!-- Navigation Menu -->
            <div class="flex items-center justify-center space-x-8 py-4 text-sm border-t border-gray-100">
                <a href="/" class="text-gray-600 hover:text-gray-900">Home</a>
                <a href="/our-works" class="text-gray-600 hover:text-gray-900">Our Works</a>
                <div class="relative group">
                    <button class="text-gray-900 hover:text-gray-600 flex items-center font-medium underline underline-offset-8">
                        Shop all
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                </div>
                <div class="relative group">
                    <button class="text-gray-600 hover:text-gray-900 flex items-center">
                        Guides
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                </div>
                <a href="/about-us" class="text-gray-600 hover:text-gray-900">About us</a>
            </div>
        </div>
    </nav>

    <!-- Product Detail Section -->
    <section class="py-12 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
                <!-- Product Image -->
                <div class="bg-white rounded-lg p-8">
                    <div class="relative">
                        <button class="absolute top-4 left-4 bg-white rounded-full p-2 shadow-md hover:bg-gray-100">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </button>
                        <img src="/images/{{product.image}}" alt="{{product.name}}" class="w-full h-auto rounded-lg">
                    </div>
                </div>

                <!-- Product Info -->
                <div class="flex flex-col">
                    <p class="text-sm text-gray-600 mb-2">Aquatic Avenue Online Store</p>
                    <h1 class="text-3xl md:text-4xl font-light text-gray-900 mb-4">{{product.name}}</h1>
                    <p class="text-2xl font-semibold text-gray-900 mb-6">{{product.price}}</p>

                    <!-- Quantity Selector -->
                    <div class="mb-6">
                        <label class="block text-sm text-gray-700 mb-2">Quantity</label>
                        <div class="flex items-center border border-gray-300 rounded-md w-40">
                            <button id="decreaseQty" class="px-4 py-2 hover:bg-gray-100">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                                </svg>
                            </button>
                            <input type="number" id="quantity" value="1" min="1" class="w-full text-center border-x border-gray-300 py-2 focus:outline-none">
                            <button id="increaseQty" class="px-4 py-2 hover:bg-gray-100">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <!-- Add to Cart Button -->
                    <button id="addToCartBtn" class="w-full bg-white border-2 border-gray-900 text-gray-900 py-3 rounded-full font-medium hover:bg-gray-900 hover:text-white transition-colors duration-300 mb-4">
                        Add to cart
                    </button>

                    <!-- PayPal Button (Placeholder) -->
                    <button class="w-full bg-yellow-400 text-gray-900 py-3 rounded-full font-semibold hover:bg-yellow-500 transition-colors duration-300 mb-4">
                        Pay with PayPal
                    </button>

                    <p class="text-sm text-gray-600 text-center mb-6">More payment options</p>

                    <!-- Product Description -->
                    <div class="border-t border-gray-200 pt-6">
                        <p class="text-gray-700">{{product.description}}</p>
                    </div>

                    <!-- Share Button -->
                    <button class="mt-6 flex items-center text-gray-700 hover:text-gray-900">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                        </svg>
                        Share
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- Add to Cart Modal -->
    <div id="cartModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-white rounded-lg max-w-md w-full p-6 relative">
            <!-- Close button -->
            <button id="closeModal" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>

            <!-- Success message -->
            <div class="flex items-center mb-6">
                <svg class="w-6 h-6 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <h3 class="text-lg font-medium text-gray-900">Item added to your cart</h3>
            </div>

            <!-- Product info -->
            <div class="flex items-center mb-6">
                <img id="modalProductImage" src="" alt="" class="w-20 h-20 object-cover rounded-lg mr-4">
                <div>
                    <p id="modalProductName" class="text-gray-900 font-medium"></p>
                </div>
            </div>

            <!-- Action buttons -->
            <div class="space-y-3">
                <a href="/cart" id="viewCartBtn" class="block w-full text-center border-2 border-gray-300 text-gray-700 py-3 rounded-full hover:bg-gray-50 transition-colors">
                    View cart (<span id="modalCartCount">0</span>)
                </a>
                <button id="checkoutBtn" class="w-full bg-gray-900 text-white py-3 rounded-full hover:bg-gray-800 transition-colors">
                    Check out
                </button>
                <button id="continueShoppingBtn" class="w-full text-gray-600 hover:text-gray-900 py-2">
                    Continue shopping
                </button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="text-xl font-bold mb-4">Aquatic Avenue</h3>
                    <p class="text-gray-400">Singapore's premier aquarium specialist for all your aquatic needs.</p>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a href="/shop" class="text-gray-400 hover:text-white">Shop</a></li>
                        <li><a href="/portfolio" class="text-gray-400 hover:text-white">Portfolio</a></li>
                        <li><a href="/services" class="text-gray-400 hover:text-white">Services</a></li>
                        <li><a href="/about" class="text-gray-400 hover:text-white">About Us</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Contact</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li>123 Aqua Street</li>
                        <li>Singapore 123456</li>
                        <li>+65 6123 4567</li>
                        <li>hello@aquaticavenue.com</li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Follow Us</h4>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-white">FB</a>
                        <a href="#" class="text-gray-400 hover:text-white">IG</a>
                        <a href="#" class="text-gray-400 hover:text-white">YT</a>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-12 pt-8 text-center text-gray-400">
                <p>&copy; 2025 Aquatic Avenue. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        // Simple client-side cart using localStorage
        const CART_KEY = 'aa_cart';

        function loadCart() {
            try { return JSON.parse(localStorage.getItem(CART_KEY) || '[]'); } catch { return []; }
        }
        function saveCart(items) {
            localStorage.setItem(CART_KEY, JSON.stringify(items));
            updateCartCount();
        }
        function updateCartCount() {
            const items = loadCart();
            const count = items.reduce((a, i) => a + i.quantity, 0);
            const el = document.getElementById('cartCount');
            if (el) el.textContent = String(count);
        }

        // Quantity controls
        const quantityInput = document.getElementById('quantity');
        const decreaseBtn = document.getElementById('decreaseQty');
        const increaseBtn = document.getElementById('increaseQty');
        const addToCartBtn = document.getElementById('addToCartBtn');

        decreaseBtn.addEventListener('click', () => {
            const currentValue = parseInt(quantityInput.value);
            if (currentValue > 1) {
                quantityInput.value = currentValue - 1;
            }
        });

        increaseBtn.addEventListener('click', () => {
            const currentValue = parseInt(quantityInput.value);
            quantityInput.value = currentValue + 1;
        });

        addToCartBtn.addEventListener('click', () => {
            const qty = Math.max(1, parseInt(quantityInput.value) || 1);
            const items = loadCart();
            const id = {{product.id}};
            const existing = items.find(i => i.id === id);
            const numericPrice = parseFloat(String(`{{product.price}}`).replace(/[^0-9.]/g, '')) || 0;
            if (existing) {
                existing.quantity += qty;
            } else {
                items.push({
                    id,
                    name: `{{product.name}}`,
                    price: numericPrice,
                    image: `{{product.image}}`,
                    quantity: qty
                });
            }
            saveCart(items);
            
            // Show modal instead of redirecting
            showCartModal();
        });

        // Modal functions
        function showCartModal() {
            const modal = document.getElementById('cartModal');
            const modalImage = document.getElementById('modalProductImage');
            const modalName = document.getElementById('modalProductName');
            const modalCount = document.getElementById('modalCartCount');
            
            modalImage.src = '/images/{{product.image}}';
            modalImage.alt = '{{product.name}}';
            modalName.textContent = '{{product.name}}';
            
            const items = loadCart();
            const totalCount = items.reduce((a, i) => a + i.quantity, 0);
            modalCount.textContent = String(totalCount);
            
            modal.classList.remove('hidden');
        }

        function hideCartModal() {
            document.getElementById('cartModal').classList.add('hidden');
        }

        // Modal event listeners
        document.getElementById('closeModal').addEventListener('click', hideCartModal);
        document.getElementById('continueShoppingBtn').addEventListener('click', hideCartModal);
        document.getElementById('checkoutBtn').addEventListener('click', () => {
            alert('Checkout would redirect to Shopify checkout (to be implemented).');
        });

        // Close modal when clicking outside
        document.getElementById('cartModal').addEventListener('click', (e) => {
            if (e.target.id === 'cartModal') {
                hideCartModal();
            }
        });

        // Initialize cart count on load
        updateCartCount();
    </script>
</body>
</html>
